{
  "rewrites": [
    {
      "source": "/api/:match*",
      "destination": "https://music-api-pi-navy.vercel.app/:match*"
    }
  ],
  "build": {
    "env": {
      "NODE_OPTIONS": "--openssl-legacy-provider",
      "VUE_APP_NETEASE_API_URL": "/api"
    }
  },
  "installCommand": "npm install --legacy-peer-deps"
} 